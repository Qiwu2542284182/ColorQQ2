<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/base_bg_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <me.qiwu.colorqq.widget.TitleBar
        android:id="@+id/photo_pick_titleBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        app:title_text="选择图片"/>
    <me.qiwu.colorqq.widget.FlexLayout
        android:layout_above="@id/photo_pick_bottom_layout"
        android:layout_below="@id/photo_pick_titleBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/photo_pick_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </me.qiwu.colorqq.widget.FlexLayout>

    <RelativeLayout
        android:id="@+id/photo_pick_bottom_layout"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <View
            android:id="@+id/photo_pick_divide"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#44aaaaaa"/>
        <LinearLayout
            android:id="@+id/photo_pick_dicName_layout"
            android:layout_below="@id/photo_pick_divide"
            android:background="@drawable/bg_water2"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/photo_pick_dicName"
                android:textSize="16sp"
                android:layout_gravity="center_vertical"
                android:maxWidth="200dp"
                android:minWidth="20dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_centerVertical="true"
                android:textColor="@color/black"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="12dp"
                android:layout_height="20dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="2dp"
                android:src="@drawable/photo_picker_triangle"
                android:tint="@color/black" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/photo_pick_num_layout"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:text="0"
                android:textSize="14sp"
                android:id="@+id/photo_pick_currentNum"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="/"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="10"
                android:textSize="14sp"
                android:id="@+id/photo_pick_maxNum"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>