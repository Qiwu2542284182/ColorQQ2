<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlt_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_water2">

        <ImageView
            android:id="@+id/photo_pick_dic_list_pre"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="8dp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/photo_pick_dic_list_pre"
            android:layout_toLeftOf="@id/photo_pick_dic_list_check"
            android:orientation="vertical">

            <TextView
                android:id="@+id/photo_pick_dic_list_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:ellipsize="middle"
                android:singleLine="true"
                android:text="fasdfafda"
                android:textColor="#333333"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/photo_pick_dic_list_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginTop="2dp"
                android:text="adfadfadfa"
                android:textColor="#666666"
                android:textSize="12sp" />
        </LinearLayout>
        <ImageView
            android:id="@+id/photo_pick_dic_list_check"
            android:src="@drawable/ic_check_white"
            android:tint="?attr/colorAccent"
            android:visibility="invisible"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="8dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="20dp"
            android:layout_height="20dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#44aaaaaa"/>
</LinearLayout>