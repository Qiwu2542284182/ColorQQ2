<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="?attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/color_item_text"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:maxLines="1"
        android:textSize="16sp"
        android:textColor="@color/title_color"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_toLeftOf="@id/color_item_text"
        android:id="@+id/color_item_color"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/widget_color_item_circle"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true" />
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/widget_color_item_stroke"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true" />

</RelativeLayout>